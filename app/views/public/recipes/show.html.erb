<div class ="container" style="margin-top:150px;">
  <div class="row justify-content-center">
    <div class="col-md-8"><b style="font-size:25px;">レシピ詳細</b></div>
  </div>

  <div class="row justify-content-center" style="margin-top:20px;">
    <div class="col-md-4" style="padding-left:0px; ">
      <div style="font-size:30px; text-align: center;"><b><%= @recipe.title %></b></div>
      <div style="text-align: end;"><b>by <%= @recipe.customer.first_name %> <%= @recipe.customer.last_name %></b></div>
    </div>
    <div class="col-md-4 d-flex align-items-end" style="padding-left:20px; margin-left:0px; font-size:23px;"><b>材料リスト(<%= @recipe.quantity%>人分)</b></div>
    <div class="col-md-3 text-right" >
      <%= link_to "編集する",edit_recipe_path(@recipe),class:"btn btn-success text-light",style:"width:100px; height:40px;" %>
    </div>
  </div>

  <div class="row justify-content-center" style="margin-top:20px;">
    <div class="col-md-4" style="text-align: end;">
      <%= image_tag @recipe.image, size: "280x280" %>
      <div>
        <span style="padding-right:110px;"><i class="fas fa-tag fa-2x"></i><b style="font-size:25px;">タグ</b></span>
        <span><%= link_to "ﾌﾞｯｸﾏｰｸ",bookmarks_path,method: :post,class:"btn btn-warning text-light",style:"width:90px; height:35px;" %></span>
      </div>
      
      <div class="pull-right" style="width:300px; font-size:20px; word-break: keep-all; text-align: left; margin-left:70px;">
        <% @recipe.tags.each do |tag|%>
          <%= tag.name %>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-4" style="padding-left:20px;">
      <% @recipe.materials.each do |material|%>
        <div style="font-size:23px;">
          <span style="display: inline-block; width: 210px;"><%= material.name %></span>
          <span style="display: inline-block; width: 120px;"><%= material.quantity %></span>
        </div>
      <% end %>
    </div>
    
　   <div class="col-md-3" style="padding-left:20px;">
　     <% @recipe.seasonings.each do |seasoning|%>
        <div style="font-size:23px;">
          <span style="display: inline-block; width: 120px;"><%= seasoning.name %></span>
          <span style="display: inline-block; width: 120px;"><%= seasoning.quantity %></span>
        </div>
      <% end %>
　   </div>
  </div>
  
  <div>
    
  </div>

</div>