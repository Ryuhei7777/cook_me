<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="container" style="margin-top:150px;">
  <div class="row justify-content-center">
    <div class="col-md-6"><b style="font-size:19px;">新規登録</b></div>
  </div>
  
  <div class="row justify-content-center" style="margin-top:30px; margin-left:30px;">
    <div class="col-md-2" style="margin:auto 0; font-size:19px;">氏名 (姓名)</div>
    <div class="col-md-2" style="padding-left:0px;"><%= f.text_field :first_name,placeholder:"令和",style:"width:170px; height:40px;"%></div>
    <div class="col-md-2" style="padding-left:20px;"><%= f.text_field :last_name,placeholder:"義孝",style:"width:170px; height:40px;" %></div>
  </div>
  
  <div class="row justify-content-center" style="margin-top:30px; margin-left:30px;">
    <div class="col-md-2" style="margin:auto 0; font-size:19px;"><%= f.label :メールアドレス %></div>
    <div class="col-md-4" style="padding-left:0px;"><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com",style:"width:380px; height:40px;" %></div>
  </div>

  <div class="row justify-content-center" style="margin-top:30px; margin-left:30px;">
    <div class="col-md-2" style="margin:auto 0; font-size:19px;"><%= f.label :パスワード %></div>
    <% if @minimum_password_length %>
    <div class="col-md-4" style="padding-left:0px;"><%= f.password_field :password,placeholder:"6文字以上", autocomplete: "new-password",style:"width:380px; height:40px;" %></div>
    <% end %>
  </div>

  <div class="row justify-content-center" style="margin-top:30px; margin-left:30px;">
    <div>
      <%= f.submit "新規登録",class:"btn btn-success text-light",style:"width:130px; height:40px;"%>
    </div>
  </div>
  
  <div class="row justify-content-center" style="margin-top:30px;">
    <div class="col-md-6"><b style="font-size:18px;">登録済みの方はこちら</b></div>
  </div>
  <div class="row justify-content-center" style="margin-top:10px;">
    <div class="col-md-6" style="margin-left:30px;"><%= link_to "こちら",new_customer_session_path %>からログインしてください。</div>
  </div>
</div>
<% end %>