<div class ="container">
  <div class="row justify-content-center">
    <div class="col-md-12 d-flex align-items-center">
      <b style="font-size:30px;">
        <% if @result == [] %>
           <h1 class="mt-3 text-center">検索結果がありません。</h1>
        <% elsif @searches.present? %>
          <% search_word = @search.title_or_tags_name_cont %>
          <h1 class="mt-3">検索結果 "<%= search_word %>"</h1>
        <% end %>
      </b>
    </div>
  </div>

  <div class="row justify-content-center">
    <% @searches.each do |search| %>
    <div class="card col-md-12" style="width: 600px; height:300px; margin-top:10px;">
      <div class="row g-0">
        <div class="col-md-5" style="padding-left:0px;">
          <%= link_to recipe_path(search.id) do %>
            <%= image_tag search.image, width: "450", height: "300", class:"card-img-top;" %>
          <% end %>
        </div>
        <div class="col-md-5">
          <div class="card-body">
            <h5 class="card-title" style="font-size:35px;"><strong><span><%= search.title %></span></strong></h5>
            <span style="font-size:1.5em;"><i class="fas fa-user"></i> By <%= search.customer.first_name %><%= search.customer.last_name %> </span></br>
            <span style="font-size:1.5em;"><%= search.comments.count %>コメント</span>
            <span style="font-size:1.5em;"><%= search.bookmarks.count %>ブックマーク</span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div style="margin-top:50px; margin-left:42%; font-size:25px;">
    <% if @searches != []%>
      <%= paginate  @searches %>
    <%end%>
  </div>
</div>