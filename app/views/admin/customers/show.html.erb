<div class ="container">
  <div class="row justify-content-center">
    <div class="col-md-11 d-flex align-items-center"><b style="font-size:30px;">会員詳細</b></div>
  </div>
  
  <div class="row" style="margin-top:35px;">
    <div class="col-md-5">
      
    </div>
    
  </div>

  <div class="row" style="margin-top:35px;">
    <div class="col-md-7">
      <table class="table" style="font-size:20px;">
        <tr　class="border-top">
          <th bgcolor="#f5f5f5", style="width:60%" class="pl-3">タイトル</th>
          <th bgcolor="#f5f5f5", style="width:20%" class="pl-3">コメント</th>
          <th bgcolor="#f5f5f5", style="width:20%" class="pl-3">ﾌﾞｯｸﾏｰｸ</th>
        </tr>
        <% @recipes.each do |recipe| %>
        <tr class="border-bottom">
          <td><%= link_to recipe.title ,admin_recipe_path(recipe) %></td>
          <td><%= recipe.comments.count %></td>
          <td><%= recipe.bookmarks.count %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
    

  <div style="margin-top:50px; margin-left:42%; font-size:25px;">
    <%= paginate @recipes %>
  </div>
</div>